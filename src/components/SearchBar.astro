---
interface Props {
  placeholder?: string;
}

const { placeholder = "Search articles... (use #tag for tags)" } = Astro.props;
---

<div class="mb-8">
  <input
    type="text"
    id="search-input"
    placeholder={placeholder}
    class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-500 dark:focus:ring-gray-600"
  />
  <div
    id="search-results"
    class="mt-2 text-sm text-gray-600 dark:text-gray-400"
  >
  </div>
</div>
